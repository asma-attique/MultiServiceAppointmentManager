@model ProviderViewModel

@{
    ViewData["Title"] = "Create Provider";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded">
                <div class="card-header text-white d-flex align-items-center" style="background-color: #1b7777;">
                    <i class="bi bi-plus-circle me-2"></i>
                    <h4 class="mb-0">Create Provider</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <input type="hidden" asp-for="Id" />

                        <!-- Name -->
                        <div class="mb-4 p-3 border rounded bg-light">
                            <h5 class="fw-bold">
                                <i class="bi bi-person-fill me-2 text-primary"></i>
                                Name
                            </h5>
                            <input asp-for="Name" class="form-control form-control-lg mt-2" placeholder="Enter provider name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>

                        <!-- Services -->
                        <div class="mb-4 p-3 border rounded bg-light">
                            <h5 class="fw-bold">
                                <i class="bi bi-briefcase-fill me-2 text-success"></i>
                                Select Services
                            </h5>
                            <div class="row">
                                @foreach (var service in Model.AvailableServices)
                                {
                                    <div class="form-check col-12 col-md-6">
                                        <input type="checkbox"
                                               class="form-check-input"
                                               name="SelectedServiceIds"
                                               value="@service.Id"
                                               @(Model.SelectedServiceIds != null && Model.SelectedServiceIds.Contains(service.Id) ? "checked" : "") />
                                        <label class="form-check-label">@service.Name</label>
                                    </div>
                                }
                            </div>
                        </div>

                        <!-- Years of Experience -->
                        <div class="mb-4 p-3 border rounded bg-light">
                            <h5 class="fw-bold">
                                <i class="bi bi-award-fill me-2 text-warning"></i>
                                Years of Experience
                            </h5>
                            <input asp-for="YearsOfExperience" type="number" min="0" class="form-control form-control-lg mt-2" placeholder="Enter years of experience" />
                            <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-success">
                                <i class="bi bi-save me-1"></i> Save
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
