@model Provider

@{
    ViewData["Title"] = "Delete Provider";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded border-danger">
                <div class="card-header text-white d-flex align-items-center" style="background-color: #dc3545;">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <h4 class="mb-0">Delete Provider</h4>
                </div>
                <div class="card-body">
                    <p class="text-danger fw-bold mb-4">
                        Are you sure you want to delete this provider? This action cannot be undone.
                    </p>

                    <div class="mb-4 p-3 border rounded bg-light">
                        <h5 class="fw-bold">
                            <i class="bi bi-person-fill me-2 text-primary"></i>
                            Name
                        </h5>
                        <p class="fs-5 mb-0">@Model.Name</p>
                    </div>

                    <div class="mb-4 p-3 border rounded bg-light">
                        <h5 class="fw-bold">
                            <i class="bi bi-briefcase-fill me-2 text-success"></i>
                            Service Type
                        </h5>
                        <p class="fs-5 mb-0">
                            @foreach (var service in Model.Services)
                            {
                                <span class="badge bg-info text-dark me-1">@service.Name</span>
                            }
                        </p>
                    </div>

                    <div class="mb-4 p-3 border rounded bg-light">
                        <h5 class="fw-bold">
                            <i class="bi bi-award-fill me-2 text-warning"></i>
                            Years of Experience
                        </h5>
                        <p class="fs-5 mb-0">
                            <span class="badge bg-success fs-6">@Model.YearsOfExperience Years</span>
                        </p>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
