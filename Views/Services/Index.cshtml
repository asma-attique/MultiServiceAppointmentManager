@model IEnumerable<Service>

@{
    ViewData["Title"] = "Services";
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow rounded">
                <div class="card-header text-white d-flex justify-content-between align-items-center" style="background-color: #1b7777;">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-gear-fill me-2"></i>
                        <h4 class="mb-0">Services</h4>
                    </div>
                    <a asp-action="Create" class="btn btn-success">
                        <i class="bi bi-plus-circle"></i> Add New Service
                    </a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead class="table-primary">
                                <tr>
                                    <th style="width: 10%;">Service Id</th>
                                    <th style="width: 35%;">Service Name</th>
                                    <th style="width: 35%;">Charges</th>
                                    <th style="width: 20%;">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model != null)
                                {
                                    var number = 1;
                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="fw-bold text-center">@number</td>
                                            <td class="fw-bold">
                                                <i class="bi bi-tags me-1"></i> @char.ToUpper(item.Name[0])@item.Name.Substring(1).ToLower()
                                            </td>
                                            <td>
                                                <span class="badge bg-success">PKR @item.Charges</span>
                                            </td>
                                            <td>
                                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white me-1">
                                                    <i class="bi bi-pencil-square"></i> Edit
                                                </a>
                                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i> Delete
                                                </a>
                                            </td>
                                        </tr>
                                        number++;
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="4" class="text-center">No services found.</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
