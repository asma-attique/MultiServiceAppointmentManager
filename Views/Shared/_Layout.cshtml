<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MultiServiceAppointmentManager</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MultiServiceAppointmentManager.styles.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body style=" background-color: #daf7f7">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark mb-4 shadow fixed-top" style="background-color: #5bc9c9;">
        <div class="container">
          <a class="navbar-brand d-flex align-items-center" asp-controller="Home" asp-action="Index">
            <img src="~/images/image.png" alt="Logo" style="height: 40px;" class="me-2" />
              MultiService Appointment Manager
            </a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNav">
              <ul class="navbar-nav ms-auto">
                  <li class="nav-item">
                      <a class="nav-link text-white fw-bold" asp-controller="Providers" asp-action="Index">
                          <i class="bi bi-people"></i> Providers
                      </a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link text-white fw-bold" asp-controller="Services" asp-action="Index">
                          <i class="bi bi-briefcase"></i> Services
                      </a>
                  </li>
                  <li class="nav-item">
                      <a class="nav-link text-white fw-bold" asp-controller="Appointments" asp-action="Index">
                          <i class="bi bi-calendar-check"></i> Appointments
                      </a>
                  </li>
              </ul>
          </div>
        </div>
      </nav>
        

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

   
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
