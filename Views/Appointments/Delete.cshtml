@model MultiServiceAppointmentManager.Models.Appointment

@{
    ViewData["Title"] = "Delete Appointment";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded border-danger">
                <div class="card-header text-white d-flex align-items-center" style="background-color: #dc3545;">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    <h4 class="mb-0">Delete Appointment</h4>
                </div>
                <div class="card-body">
                    <p class="text-danger fw-bold mb-4">
                        Are you sure you want to delete this appointment? This action cannot be undone.
                    </p>

                    <!-- Customer Name -->
                    <div class="mb-4 p-3 border rounded bg-light">
                        <h5 class="fw-bold">
                            <i class="bi bi-person-fill me-2 text-primary"></i>
                            Customer Name
                        </h5>
                        <p class="fs-5 mb-0">@Model.CustomerName</p>
                    </div>

                    <!-- Appointment Date -->
                    <div class="mb-4 p-3 border rounded bg-light">
                        <h5 class="fw-bold">
                            <i class="bi bi-calendar-event-fill me-2 text-success"></i>
                            Appointment Date
                        </h5>
                        <p class="fs-5 mb-0">@Model.Date.ToString("yyyy-MM-dd")</p>
                    </div>

                    <!-- Appointment Time -->
                    <div class="mb-4 p-3 border rounded bg-light">
                        <h5 class="fw-bold">
                            <i class="bi bi-clock-fill me-2 text-secondary"></i>
                            Time
                        </h5>
                        <p class="fs-5 mb-0">@Model.Time.ToString(@"hh\:mm")</p>
                    </div>

                    <!-- Provider -->
                    <div class="mb-4 p-3 border rounded bg-light">
                        <h5 class="fw-bold">
                            <i class="bi bi-person-badge-fill me-2 text-info"></i>
                            Provider
                        </h5>
                        <p class="fs-5 mb-0">@Model.Provider?.Name</p>
                    </div>

                    <!-- Services -->
                    <div class="mb-4 p-3 border rounded bg-light">
                        <h5 class="fw-bold">
                            <i class="bi bi-list-check me-2 text-danger"></i> Service
                        </h5>
                        <p class="fs-5 mb-0">@Model.Service.Name</p>
                    </div>
                    
                    <!--Charges-->
                    <div class="mb-4 p-3 border rounded bg-light">
                        <h5 class="fw-bold">
                            <i class="bi bi-cash-stack me-2 text-success"></i> Charges
                        </h5>
                        <p class="fs-5 mb-0">PKR @Model.TotalCharges.ToString("N0")</p>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex justify-content-between">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i> Confirm Delete
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i> Cancel
                            </a>
                        </div>
                    </form>

                </div>
            </div>
        </div>
    </div>
</div>
